<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    tools:context=".ui.NearPeopleActivity">


    <dong.lan.shundai.view.xlist.XListView
        android:id="@+id/list_near"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@drawable/base_horizontal_line"
        android:dividerHeight="1dp"
        android:fadingEdgeLength="0dp"
        android:fastScrollEnabled="true"
        android:paddingBottom="10dp" />

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/no_one_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/near_no_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/base_dialog_bg"
            android:drawablePadding="16dp"
            android:drawableTop="@drawable/lemon"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/near_noone_tips"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/no_one_click"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:background="@drawable/right49" />

    </FrameLayout>

</FrameLayout>