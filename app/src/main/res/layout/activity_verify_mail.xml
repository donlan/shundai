<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_200"
    android:orientation="vertical">
<include layout="@layout/action_bar"/>
    <EditText
        android:padding="16dp"
        android:hint="@string/enter_email_hint"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:id="@+id/ver_email"
        android:gravity="center|start"
        android:background="@drawable/circle_rect_alpha_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress" />

    <TextView
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textSize="@dimen/test_size_default"
        android:text="发送验证"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/md_white_1000"
        android:background="@drawable/circle_rect_light_orange"
        android:id="@+id/post_ver_email"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:gravity="center"
        android:textSize="@dimen/text_size_small"
        android:id="@+id/mail_tip"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>