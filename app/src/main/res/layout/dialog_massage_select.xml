<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="20dp"
    android:background="@drawable/bg_border"
    android:orientation="vertical">

        <TextView
            android:background="@drawable/btn_selector"
            android:id="@+id/my_message_seek"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/umeng_comm_favorites_pressed"
            android:drawableRight="@drawable/jiantou"
            android:drawablePadding="16dp"
            android:gravity="center"
            android:text="我的求带"
            android:textColor="@color/md_grey_800"
            android:textSize="16sp" />
        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/md_grey_400"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView
            android:drawableLeft="@drawable/umeng_comm_favorites_pressed"
            android:id="@+id/my_message_help"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableRight="@drawable/jiantou"
            android:drawablePadding="16dp"
            android:gravity="center"
            android:text="我的帮带"
            android:textColor="@color/md_grey_800"
            android:textSize="16sp" />
        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/md_grey_400"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView
            android:drawableLeft="@drawable/umeng_comm_favorites_pressed"
            android:id="@+id/my_message_comment"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableRight="@drawable/jiantou"
            android:drawablePadding="16dp"
            android:gravity="center"
            android:text="我的评论"
            android:textColor="@color/md_grey_800"
            android:textSize="16sp" />
        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/md_grey_400"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView
            android:drawableLeft="@drawable/umeng_comm_favorites_pressed"
            android:id="@+id/my_honest_info"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableRight="@drawable/jiantou"
            android:drawablePadding="16dp"
            android:gravity="center"
            android:text="信用值   "
            android:textColor="@color/md_grey_800"
            android:textSize="16sp" />

        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/md_grey_400"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView
            android:drawableLeft="@drawable/umeng_comm_favorites_pressed"
            android:id="@+id/my_meili_info"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableRight="@drawable/jiantou"
            android:drawablePadding="16dp"
            android:gravity="center"
            android:text="魅力值   "
            android:textColor="@color/md_grey_800"
            android:textSize="16sp" />


</LinearLayout>