<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:background="@drawable/base_dialog_bg"
    android:layout_margin="4dp"
    >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/help_avater"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="#00ffffff"
            android:focusable="false"
            android:scaleType="fitCenter" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/help_name_tvbtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="昵称"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/help_meter_tvbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:text="距离"
                    android:textColor="#424254"
                    android:textSize="15dp" />


            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/help_iocn1_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/age_bg"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/help_iocn2_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/xingzuo_bg"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/help_iocn3_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/honest_bg"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/help_iocn4_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/meili_bg"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <ImageView

                    android:id="@+id/help_picture1_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:focusable="false"
                    android:gravity="center"
                    android:minHeight="20dp"
                    android:minWidth="30dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/help_trends_tvbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.2dp"
            android:layout_marginTop="0.3dp"
            android:layout_weight="1"
            android:gravity="start|center"
            android:padding="10dp"
            android:maxLines="5"
            android:text="个人动态"
            android:textSize="13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@color/md_grey_500" />

        <TextView
            android:id="@+id/help_time_tvbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="0.3dp"
            android:gravity="start|center"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="8dp"
            android:text="时间"
            android:textColor="#6a4a3c"
            android:textSize="15dp" />


    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/help_visit_tvbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:text="@string/visit"
            android:textSize="13sp" />

        <View
            android:background="@color/md_grey_800"
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/help_comment_tvbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:text="@string/comment"
            android:textSize="13sp" />


    </LinearLayout>


</LinearLayout>